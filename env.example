# OpenAI
OPENAI_API_KEY=your_openai_api_key

# OpenRouter (опционально - альтернатива OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Модели OpenRouter (можно переключать)
OPENROUTER_MODEL_CLAUDE=anthropic/claude-3.5-sonnet
